<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.ac.vnrvjiet.easypay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />


    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="android:usesCleartextTraffic"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".PhoneNumberVerification" />
        <activity android:name=".InsuranceActivity" />
        <activity android:name=".LaunchActivity" />
        <activity android:name=".PollutionActivity" />
        <activity android:name=".PollutionPaymentActivity" />
        <activity android:name=".StartPaymentActivity" />
        <activity android:name=".TollTaxActivity" />
        <activity android:name=".TolltaxPaymentActivity" />
        <activity android:name=".InsurancePaymentActivity" />

        <service android:name=".FirebaseTokenUtil" />
    </application>

</manifest>